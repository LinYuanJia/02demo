/* pages/profile_content/dingdan/dingdan.wxss */
.container {
  width: 100%;
}
.main_box {
  margin: 20rpx;
  font-size: 24rpx;
  color: #999999;
}
.content_middle {
  display: flex;
  width: 100%;
  height: 180rpx;
  margin: 10rpx 0;
}
.box_img {
  width: 170rpx;
  height: 170rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.content_bottom {
  display: flex;
  justify-content: flex-end;
}
.content_bottom .del,.content_bottom .pay {
  padding: 0;
  margin: 0 0 0 40rpx;
  width: 140rpx;
  min-height: 40rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 24rpx;
  border-radius: 5rpx;
}
.del {
  background-color: #ffffff;
  color: #9f9f9f;
  border: 2rpx solid #9f9f9f;
}
.pay {
  background-color: #ff4d41;
  color: #ffffff;
  border: 2rpx solid #ff4d41;
}