/* pages/books/books.wxss */
page {
  background-color: #fcfcfc;
}
/* 头部搜索样式 */
.head {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 0 auto;
  height: 110rpx;
  width: 95%;
}
.head .head_img {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.head input {
  width: 580rpx;
  height: 60rpx;
  box-shadow: 5rpx 8rpx 8rpx #c4bebe;
  border-radius: 50rpx; 
  font-size: 28rpx;
  text-align: center;
}
.head text {
  position: absolute;
  top: 40rpx;
  left: 300rpx;
  color: #989794;
}
/* 导航菜单栏样式 */
.nav {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin: 20rpx auto;
  width: 90%;
  height: 228rpx;
}
.nav_box {
  width: 143rpx;
  height: 170rpx;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
}
.nav_box image {
  width: 120rpx;
  height: 120rpx;
}
/* 下方展示盒，切换栏样式 */
.body_bar {
  margin: 0 auto;
  width: 100%;
  height: 80rpx;
}
.bar_slider {
  white-space: nowrap;
  height: 80rpx;
}
.bar_box {
  display: inline-block;
  width: 160rpx;
  height: 80rpx;
  font-size: 28rpx;
  color: #666666;
  line-height: 80rpx;
  text-align: center;
}
.bar_box text {
  display: inline-block;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
}
.active {
  font-size: 30rpx;
  background-color: #fa3b3b;
  color: #fcfcfc;
}