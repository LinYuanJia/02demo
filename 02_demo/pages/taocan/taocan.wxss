/* 上方切换栏样式 */
.hesd_bar {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 80rpx;
}
.bar_box {
  width: 180rpx;
  height: 75rpx;
  text-align: center;
  line-height: 75rpx;
  font-size: 28rpx;
  color: #666666;
}
.active {
  font-size: 30rpx;
  color: #333333;
  border-bottom: 4rpx solid #ff6d51;
}
/* 下方body图片样式 */
.body {
  width: 100%;
}
